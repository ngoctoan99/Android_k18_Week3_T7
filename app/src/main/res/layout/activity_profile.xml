<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="user"
            type="com.example.androidbaitaptuan3.User" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="145dp"
        android:layout_height="250dp"
        android:layout_marginTop="-110dp"
        android:layout_marginLeft="180dp">
        <ImageView
            android:layout_width="145dp"
            android:layout_height="250dp"
            android:background="@drawable/vector"
            ></ImageView>
    </LinearLayout>

    <ImageView
        android:id="@+id/view4"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/pink"></ImageView>

    <ImageView
        android:rotation="20"
        android:layout_width="90dp"
        android:layout_height="190dp"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/vectoryellow"></ImageView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true">
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp"
            >
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/ellipse"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_gravity="center"
                android:layout_height="10dp"
                android:background="@drawable/camera"
                ></ImageView>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{user.fullname}"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/cardview1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"></TextView>
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textColor="#83000000"
        android:layout_below="@+id/textname"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"></TextView>
    <TextView
        android:id="@+id/tvfullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full name"
        android:layout_below="@+id/text4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"></TextView>

    <EditText
        android:id="@+id/editfullname"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvfullname"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom1"
        android:text="@{user.fullname}"

        android:textSize="15dp"></EditText>
    <TextView
        android:id="@+id/tvemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_below="@+id/editfullname"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"></TextView>
    <EditText
        android:id="@+id/editemail"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvemail"
        android:text="@{user.email}"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom1"></EditText>
    <TextView
        android:id="@+id/tvphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@+id/editemail"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"></TextView>
    <EditText
        android:id="@+id/editphone"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvphone"
        android:text="@{user.phone}"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/custom1"></EditText>
</RelativeLayout>
</layout>